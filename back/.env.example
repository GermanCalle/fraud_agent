# ============================================================================
# APP CONFIGURATION
# ============================================================================
APP_NAME="Fraud Detection System"
DEBUG=true
VERSION="0.1.0"

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="sqlite+aiosqlite:///./fraud_detection.db"

# ============================================================================
# OPENAI (Primary LLM)
# ============================================================================
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4o-mini"
OPENAI_TEMPERATURE=0.1

# ============================================================================
# AZURE OPENAI (Alternative - Optional)
# ============================================================================
# AZURE_OPENAI_API_KEY="your-azure-openai-key"
# AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
# AZURE_OPENAI_DEPLOYMENT="gpt-4"
# AZURE_OPENAI_API_VERSION="2024-02-15-preview"

# ============================================================================
# AZURE AI SEARCH (Vector Database for RAG)
# ============================================================================
AZURE_SEARCH_ENDPOINT="your-search-endpoint"
AZURE_SEARCH_KEY="your-search-key"
AZURE_SEARCH_INDEX_NAME="fraud-policies"

# ============================================================================
# TAVILY (Web Search for External Threat Intelligence)
# ============================================================================
TAVILY_API_KEY="your-tavily-api-key"

# ============================================================================
# REDIS (Optional - Caching)
# ============================================================================
REDIS_URL="redis://localhost:6379/0"
REDIS_ENABLED=false

# ============================================================================
# LANGSMITH (Optional - Observability)
# ============================================================================
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY="your-langsmith-api-key"
LANGCHAIN_PROJECT="fraud-detection"

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
